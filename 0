    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const audioToggle = document.getElementById('cosmicAudioToggle');
            const cinematicAudio = document.getElementById('cinematicAudio');
            let isPlaying = false;
            
            // Toggle audio function
            function toggleAudio() {
                if (isPlaying) {
                    cinematicAudio.pause();
                    cinematicAudio.currentTime = 0;
                    audioToggle.classList.remove('playing');
                } else {
                    cinematicAudio.play().catch(e => {
                        console.log("Audio play failed:", e);
                        // Fallback for autoplay restrictions
                        alert("Please click the button again to enable audio");
                    });
                    audioToggle.classList.add('playing');
                }
                
                audioToggle.classList.toggle('flipped');
                isPlaying = !isPlaying;
            }
            
            // Event listeners
            audioToggle.addEventListener('click', toggleAudio);
            
            // Add keyboard shortcut (Spacebar)
            document.addEventListener('keydown', function(e) {
                if (e.code === 'Space' && e.target === document.body) {
                    e.preventDefault();
                    toggleAudio();
                }
            });
            
            // Handle page visibility changes (pause when tab is not active)
            document.addEventListener('visibilitychange', function() {
                if (document.hidden && isPlaying) {
                    cinematicAudio.pause();
                } else if (!document.hidden && isPlaying) {
                    cinematicAudio.play().catch(e => console.log("Resume failed:", e));
                }
            });
        });
    </script>


